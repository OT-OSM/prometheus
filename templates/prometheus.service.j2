[Unit]
Description=Prometheus Server Service
Wants=network-online.target
After=network-online.target

[Service]
User={{ user_name }}
Group={{ group_name }}

Type=simple
ExecStart={{ prometheus_binary_path }}/prometheus \
    --config.file {{ prometheus_config_path }}/prometheus.yml \
    --storage.tsdb.path {{ storage_path }}/

[Install]
WantedBy=multi-user.target
